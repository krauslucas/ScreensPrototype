<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" fx:id="background" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Standard.AddNewTestController">
   <children>
      <Label fx:id="tab" layoutX="30.0" layoutY="15.0" scaleX="1.25" scaleY="1.25" text="Adicionar Nova Avaliação" />
      <Label fx:id="name" layoutX="36.0" layoutY="60.0" scaleX="1.25" scaleY="1.25" text="Nome" />
      <TextField fx:id="nameField" layoutX="32.0" layoutY="80.0" prefWidth="500.0" />
      <Label fx:id="weight" layoutX="35.0" layoutY="120.0" scaleX="1.25" scaleY="1.25" text="Peso" />
      <TextField fx:id="weightField" layoutX="32.0" layoutY="140.0" prefWidth="200.0" />
      <Label fx:id="discipline" layoutX="39.0" layoutY="180.0" scaleX="1.25" scaleY="1.25" text="Disciplina" />
      <SplitMenuButton fx:id="disciplineMenu" layoutX="32.0" layoutY="200.0" mnemonicParsing="false" prefWidth="200.0">
        <items>
          <MenuItem fx:id="dis1" mnemonicParsing="false" text="Disciplina 1" />
          <MenuItem mnemonicParsing="false" text="Disciplina 2" />
        </items>
      </SplitMenuButton>
      <Label layoutX="36.0" layoutY="240.0" scaleX="1.25" scaleY="1.25" text="Média" />
      <SplitMenuButton fx:id="averageMenu" layoutX="32.0" layoutY="260.0" mnemonicParsing="false" prefWidth="200.0">
         <items>
            <MenuItem mnemonicParsing="false" text="M1" />
            <MenuItem mnemonicParsing="false" text="M2" />
            <MenuItem mnemonicParsing="false" text="M3" />
         </items>
      </SplitMenuButton>
      <Button fx:id="back" layoutX="40.0" layoutY="340.0" mnemonicParsing="false" onAction="#backScreenMyTests" prefWidth="60.0" scaleX="1.25" scaleY="1.25" text="Voltar" />
      <Button fx:id="save" layoutX="490.0" layoutY="340.0" mnemonicParsing="false" onAction="#saveNewTest" prefWidth="60.0" scaleX="1.25" scaleY="1.25" text="Salvar" />
   </children>
</AnchorPane>
